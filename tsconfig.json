{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/*", "@types"],
  "exclude": ["dist", "node_modules"]
}

{
  "name": "line-draw",
  "description": "We can draw a line on Browser.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "32": "assets/icon32×32.png",
    "48": "assets/icon48×48.png",
    "128": "assets/icon128×128.png"
  },
  "action": {},
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["src/loader.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content.js",
        "src/draw.js",
        "src/styles.js",
        "src/config.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
